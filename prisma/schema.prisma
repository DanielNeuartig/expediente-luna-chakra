generator client {
  provider = "prisma-client-js"
  //output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int       @id @default(autoincrement())
  correo          String    @unique
  contrase√±a      String
  rol             Rol       @default(MEDICO)
  creadoEn        DateTime  @default(now())
  ultimaConexion  DateTime?
  activo          Boolean   @default(true)
  verificadoEmail Boolean   @default(false)

  propietario       Propietario?       @relation(fields: [propietarioId], references: [id])
  propietarioId     Int?               @unique

  usuarioClinicas   UsuarioClinica[]
  accesos           Acceso[]
  verificacionesSMS VerificacionSMS[]
}

model Propietario {
  id       Int      @id @default(autoincrement())
  nombre   String
  creadoEn DateTime @default(now())

  telefonoPrincipal   String
  telefonoSecundario1 String?
  telefonoSecundario2 String?

  usuario   Usuario?
  usuarioId Int?     @unique
}

model Clinica {
  id        Int      @id @default(autoincrement())
  nombre    String
  direccion String
  telefono  String
  tipo      String
  creadoEn  DateTime @default(now())

  usuarioClinicas UsuarioClinica[]
}

model VerificacionSMS {
  id               Int       @id @default(autoincrement())
  telefono         String
  codigo           String
  usado            Boolean   @default(false)
  creadoEn         DateTime  @default(now())
  expiradoEn       DateTime
  usuarioId        Int
  intentosFallidos Int       @default(0)

  usuario Usuario @relation(fields: [usuarioId], references: [id])

  @@index([telefono, creadoEn])
}

model UsuarioClinica {
  id        Int @id @default(autoincrement())
  usuarioId Int
  clinicaId Int

  usuario Usuario @relation(fields: [usuarioId], references: [id])
  clinica Clinica @relation(fields: [clinicaId], references: [id])

  @@unique([usuarioId, clinicaId])
}

model Acceso {
  id           Int         @id @default(autoincrement())
usuarioId    Int?        // <- ahora es opcional
  ip           String
  fecha        DateTime    @default(now())
  tipoAcceso   TipoAcceso

  usuario Usuario? @relation(fields: [usuarioId], references: [id])

  @@index([usuarioId, tipoAcceso, fecha])
}

enum Rol {
  CEO
  ADMIN
  MEDICO
  AUXILIAR
  PROPIETARIO
}

enum TipoAcceso {
  SMS_ENVIO
  SMS_VERIFICACION
  LOGIN
  REGISTRO
  REGISTRO_PROPIETARIO
  SMS_DISPONIBILIDAD
}